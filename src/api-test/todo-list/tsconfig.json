{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "types": [
      "vitest/globals"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
